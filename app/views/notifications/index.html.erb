<div class ="container">
  <div class ="row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>通知</h3>
      <%= link_to"通知削除",notification_path(@notifications),method: :delete,class: "fas fa-trash" %>
      <% if @notifications.exists? %>
      <table class = 'table'>
        <thead>
          <tr>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @notifications %>
        </tbody>
        <% else %>
        <p>通知はありません</p>
        <% end %>
      </table>
    </div>
  </div>
</div>
