<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr id = "book_<%= book.id %>">
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td><%= book_tags each do |tag| %>
        <%= link_to tag.tag_name,tag_books_path(tag_id: tag.id) %>
        <%= "(#{tag.book.count})" %></td>
        <%end%>
        <td class ="favorite-btn"><%= render "favorites/favorite", book: book %></td>
        <td class ="comments-count">コメント数：<%= book.book_comments.count %></td>
        <td>閲覧数：<%= book.impressions_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>